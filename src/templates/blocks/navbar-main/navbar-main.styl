.navbar-main
    padding-top 8px 
    text-align right
    background-color white
    border none 
    transition all .2s ease-in-out
    clearfix()
    @media phone
        border-bottom 2px solid #e5f2f5
    .container
        &__left-side
            float left
            width 60% 
        &__right-side
            float right
            width 40% 
        @media phone
            &__left-side, &__right-side
                display block
                width 100% 
    .navbar-header
        float left  
        position relative
        display inline-block
        vertical-align baseline 
        max-width 185px 
        width 100% 
        margin-right 10px !important
        text-align left
        @media phone 
            max-width 145px
        &__title
            padding-top 5px
            color #a8e3ee
            font-size 14px
            
        &__loc-icon
            position absolute
            vertical-align baseline 
            sprite($locat)
            bottom 3px
    .select7
        &__caret
            margin-left 8px
            border-color blue_base transparent transparent
        &__current
            color #0099a8
        &__option
            color blue_base
            
    .navbar-header
        margin-right 45px
        @media phone_tablet
            margin-right: 15px
    .user-panel-menu__button
        -webkit-border-radius 2px 
        border-radius 2px 
        @media phone_tablet
            display: none  
    .favorites-link
        @media phone_tablet
            padding-right: 0
        @media only screen and (max-width: 768px)
            display none
    .user-panel
        float right
        
        >div, >a
            float right
    // @media phone_tablet
    //     .user-panel
    //         float left
    //         margin-right 100px
    //         margin-top 10px
    .navbar-toggle
        .icon-bar + .icon-bar
            margin-top: 4px
            
.navbar-main_none
    display none

.navbar-main.navbar-main_inner
    padding-top 8px 
    text-align right
    background-color white
    border none
    .container
        position relative
        width auto 
        padding-right 0 
    .navbar-header
        float none
        
.navbar-mobile
    .menu
        width 100% 
    .search
        &:hover
            background none
    .search__field
        display block
        margin-top 10px
        line-height 2 
        padding 0 40px 0 15px 
    .search__button
        margin 10px 0px 0 0
        height 37px 
        padding 0px 15px
    @media phone 
        .search-result .livesearch.top-list
            max-width 706px 
            width 100%