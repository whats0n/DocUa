.footer-bottom
    margin-top 50px 
    border-top 1px solid rgba(255, 255, 255, .3)
    padding 20px 0
    clearfix()
    @media phone
        position relative
        height 150px
        margin-top 0
        padding 0
        border-top 1px solid rgba(255,255,255,.3)
    @media only screen and (max-width: 768px)
        margin-top 20px 
    .partners, .footer-info, .social-links
        display inline-block
        vertical-align top  
    .partners
        float left 
        margin-right 70px 
        margin-top 0 
        @media only screen and (max-width: 1024px)
            margin-right 30px         
        @media only screen and (max-width: 768px)
            margin-right 20px 
        &__fieldset
            max-width 290px 
            padding 0 
            border none
        &__item
            margin-right 10px
    .footer-info
        padding-top 6px 
        @media only screen and (max-width: 1024px)
            padding-top 0
            width 50%  
        @media only screen and (max-width: 768px)
            width 43%  
        @media phone
            position absolute
            width auto 
            bottom 25px
            left 20px
            right 20px
    .footer-copyright
        display inline-block
        color #fff
        font-size 13px
        opacity .68 
        a
            color #fff
            text-decoration none
    .footer-rights  
        display inline-block
        vertical-align baseline 
        color #fff
        opacity .68 
        font-size 13px
        line-height 1.166
        &_international
            display none 
    .social-links
        float right 
        margin 0 
        @media phone
            float none
            margin 0
            position absolute
            top 20px
            left 20px
            right 20px
        &__item 
            position relative
            margin-right 12px 
            width 35px 
            height 35px 
            background-color rgba(255, 255, 255, .75) 
            border-radius 50%
            border 1px solid rgba(255, 255, 255, .6) 
            box-sizing border-box
            &:last-child
                margin-right 0
            &-social
                &-fb
                    sprite($footer_fb_icon)
    
                    &:hover
                        sprite($footer_fb_hover)
                &-vk
                    sprite($footer_vk_icon)
    
                    &:hover
                        sprite($footer_vk_hover)

                &-gplus
                    sprite($footer_g_icon)
    
                    &:hover
                        sprite($footer_g_hover)
            &:hover
                background-color transparent 
                opacity .75 
