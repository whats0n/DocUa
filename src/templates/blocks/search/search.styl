.search
    position relative
    float right
    width 100%
    margin-top 5px
    &__field
        float right
        width 234px
        padding-right 30px !important
        color form_input_color
        font-size 14px
        background #e5f2f5
        border-color transparent
        &::-webkit-input-placeholder
            color #91b5bc
        @media phone
            width 100%
    &__button
        position absolute
        display block
        top 0
        right 0
        border 0 none
        margin 7px 8px 0 0
        opacity 0.75
        transition opacity 0.2s ease
        background-color transparent
        sprite($search)
        outline none
        &:hover
            opacity 1.0
        &:active
            opacity 1.0
    