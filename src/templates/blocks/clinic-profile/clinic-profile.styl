//tab-finished
.completed-header
    margin-top 20px
    clearfix()
    &__item
        position relative
        float left
        margin-right 15px
        &:last-child
            float right
            margin-right 0
        .everyone-header
            display inline-block
            background-color white
            border 1px solid rgba(22, 141, 164, 0.7)
            border-radius 3px
            box-shadow 0 2px 4px rgba(0, 64, 76, 0.15)
            padding 5px 10px 5px 15px
            width 184px
            color #168da4
            &:after
                content ''
                float right
                margin 8px 6px 0 0 
                display inline-block
                border 4px solid transparent
                border-top 6px solid #1d89a0
        .everyone-lists 
            display none
            position absolute
            top 31px 
            z-index 10 
            width 184px
            color #91b5bc
            font-size 14px
            border 1px solid rgba(22, 141, 164, 0.7)
            border-radius 0 0 3px 3px
            box-shadow 0 2px 4px rgba(0, 64, 76, 0.15)
            background #fff
            &.is-open
                display block
            &__list
                padding 5px 5px 5px 15px
                color text_color
                cursor pointer
                &:first-child
                    margin-top 6px
                &:last-child
                    margin-bottom 6px
                &:hover
                    background-color #e5f2f5 
                    color #168da4 
        .date-picker
            position relative
            width 226px
            height 31px
            color #bed3d8
            padding-left 7px
            cursor pointer 
            &:before
                content ''
                float left
                margin-top 0 
                border none
                background url('i/cabinet/piker-calendar.png') no-repeat center center
                margin-right 10px
                width 20px
                height 20px
            
        .date-wrap
            display none
            position absolute 
            z-index 100 
            top 50px
            right 0
            width 596px
            background-color #FFF 
            border 1px solid blue_base
            border-radius 3px
            box-shadow 0 2px 4px rgba(0, 64, 76, 0.19)
            &.is-open
                display block   
            .date-header
                background-color blue_base 
                border-radius 2px 2px 0 0 
                width 100%
                color white
                text-align center
                &:after
                    content ''
                    position absolute
                    top -21px
                    right 193px 
                    width 0
                    height 0
                    border 11px solid transparent
                    border-bottom 10px solid blue_base
                &__item
                    display inline-block
                    font-size 14px
                    line-height 40px
                    padding 0 12px
                    &:first-child
                        padding 0
                    &.active
                        a
                            font-weight 700 
                            border-color blue_base 
                &__link
                    color #FFF
                    text-decoration none
                    border-bottom 1px dashed #fff 
                    &:hover
                        border-color blue_base
            .datepick
                width 595px !important
                clearfix()
                a 
                    text-decoration none
            .datepick-month
                width 50%
                float left
                text-align center
                .datepick-month-header
                    line-height 35px
                &.last
                    border-left 1px solid  rgba(#148ca3, 0.33)
                    margin-left -1px
                    
                table
                    width 100%
                thead
                    tr
                        &:first-child
                            border-top 1px solid rgba(#148ca3, 0.33)
                        &:last-child
                            span
                                font-size 15px
                                line-height 32px
                                text-transform uppercase
                                color #148ca3 
                            
                        .datepickerGoNext
                            a
                                font-size 20px
                        .datepickerGoPrev
                            a
                                font-size 20px
                        th
                           text-align center
                           a
                               font-size 16px
                               line-height 32px 
                               color text_color
                tbody
                    tr
                        line-height 35px
                        td
                            .datepick-other-month
                                color #a6b8bc 
                            .datepick-today
                                color #f07804
                                position relative
                                &:after
                                    content ''
                                    position absolute
                                    bottom -6px
                                    left 50% 
                                    margin-left -3px
                                    z-index 10
                                    display block
                                    background-color #f07804
                                    width 5px
                                    height 5px
                                    border-radius 50%
                            .datepick-selected, .datepick-highlight
                                position relative
                                &:before
                                    content ''
                                    position absolute
                                    top 50%
                                    margin-top -18px
                                    left 50%
                                    margin-left -22px
                                    width 46px
                                    height 35px
                                    border-radius 3px 
                                    background-color grey_base 
                                    z-index -5 
                        a
                            color #1d1e29  
    
        
            .date-footer
                border-top 1px solid rgba(#148ca3, 0.33)
                // min-height 50px
                line-height 50px
                clearfix()
                &__left
                    float left
                    color #91b5bc
                    font-size 16px
                    padding-left 25px
                    input
                        border none
                        width 180px
                &__right
                    float right
                &__button
                    color #fff
                    font-size 14px
                    font-weight: 700
                    width 115px
                    padding 5px 0
                    margin-right 10px
                    &.btn-green
                        background-color green_base
                        &:hover
                            background-color #3ab3a2
                            
                    &.btn-grey
                        background-color #a9bdc4
                        &:hover
                            background-color #A4B4BB
                         
                    
            
                    
                
