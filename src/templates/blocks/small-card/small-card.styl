.filials-list
    // background beige_light
.small-card
    padding 9px 0 19px
    clearfix()
    &:not(:first-child)
        border-top 1px dashed #ccc
    &_mod
        border: 1px solid #fff
        background: #fff
        border-radius: 3px
        box-shadow: 0 2px 4px rgba(0, 64, 76, 0.15)
        padding-top: 11px !important
        margin-bottom: 21px
        &:not(:first-child)
            border: 1px solid #fff
        &:hover
            box-shadow: 0 10px 15px #e3e4ed
            border-color: green_base
    &__label-description
        a
            display inline-block
    article
        clearfix()
    .rating__value
        top 1px
    &__footer
        @media phone
            .btn
                margin-top: 5px
        @media screen560
            .btn
                wide-btn()
        .btn
            font-weight: 700
            border-radius: 3px
            padding: 4px 19px 5px
    &__left-side
        margin-bottom 0

        .rating
            margin-top 3px
    &__right-side
        position relative
        @media phone
            margin-left 20px 
    &__action
        display inline-block
        width 440px
        margin 0
        padding: 5px 0 4px
        @media phone_tablet
            width 100%
        span
            position relative
            margin-right 17px
            padding 0 9px 2px
            color #fff
            line-height 20px
            font-weight 700
            border-radius border_radius_sm 0 0 border_radius_sm
            font-size: 16px
            display: inline-block
            &.orange
                background orange_color
            &:after, &:before
                content ''
                position absolute
            &:after
                right -9px
                top 0
                border-style: solid;
                border-width: 11px 0 11px 9px;
                border-color: transparent transparent transparent orange_color;
            &:before
                top: 0
                bottom: 0
                right: -1px
                border-right: 1px solid orange_color
                border-radius: 50%
        a
            color: #4b89d3
            font-size: 16px
                
    &__title
        >*
            margin 0 !important
            font-size 18px !important
            line-height 1.7 !important
        h3
            font-weight: 700
        a
            color: #4b89d3
    &
    &_hidden
    .show-hidden-small-cards &_hidden
        // max-height 400px
        padding-top 9px
        overflow visible
        opacity 1
        position relative
        display block
        width 100%
        transition all .3s linear
        display: block
    &_hidden
        display: none
        padding-top 0
        padding-bottom 0
        margin-top 0
        border-top 0 none
        overflow hidden
        opacity 0
    &__description-mod
        padding: 2px 0 14px
    &__address-mod
        padding: 0 0 5px

.show-hidden-small-cards .small-card_hidden
    padding-bottom: 20px
        
