.menu
    float left
.main-menu
    width 100%
    height 48px
    margin 0 
    padding 0
    list-style none
    font-size 0
    
    &__item
        display inline-block
        height 100%
        position relative 
        vertical-align top 
        &-link
            position relative
            display block
            height 100%
            padding 0 33px
            font-size 16px
            line-height 3
            white-space nowrap
            color #5e6e71
            text-transform uppercase
            text-decoration none
            &:before
                content attr(data)
                position absolute
                top 0
                left 33px
                font-size 16px
                color transparent
                font-weight 700
                transition all .2s ease-in-out
            @media tablet
                padding 0 8px
                font-size 15px
                &:before
                    font-size 15px
                    left 9px 
            &:hover
                text-decoration none
                color transparent
            &:hover:before
                color blue_base 
