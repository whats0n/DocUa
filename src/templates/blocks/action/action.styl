
.direction
	background-color white
	border-radius 2px
	box-shadow 0 2px 4px rgba(0, 64, 76, 0.15)
	font-size 16px
	padding 0 20px
	margin-bottom 20px
	clearfix()
	@media phone
		padding 0 10px 
	a
		outline none
	&__left
		float left
		@media phone
			float none
			display block
	&__title
		display inline-block
		line-height 55px
		padding-right 20px
	&__btn
		position relative
		display inline-block
		font-size 14px
		border 1px solid rgba(129, 169, 177, 0.7)
		border-radius 2px
		box-shadow: 0 2px 4px rgba(0, 64, 76, 0.08)
		width 266px
		padding 5px 15px
		color #77969c
		text-decoration none
		outline none
		&:focus
			text-decoration none
			color #77969c
		&:hover
			border-color green_base
			color green_base
		&:after
			content ''
			position absolute
			right 15px
			top 45%
			display block
			width 0
			height 0
			border 5px solid transparent 
			border-top 5px solid #77969c
		
		
			
		.btn__close
			display none
			margin 0 0 -3px 20px 
			cursor: pointer
			width: 12px
			height: 12px
			background url('i/icons/action-close.png')  no-repeat
			
		.is-active
			display inline-block
				
	&__right
		float right
		line-height 55px
		@media phone
			float left

