						margin-right 0 
			.price	
				padding 8px 0
				position absolute
				bottom 20px 
				width 24%
				@media phone
					position static
					width 50%
					margin-left 50%
				@media screen560
					float none
					width 100%
					margin-left 0  
				&__old
					display inline-block
					text-decoration: line-through
					color #91b5bc
					font-size 13px
				&__new 
					display inline-block
					font-size 23px
					font-weight 700
					color text_color
					padding-left 5px
				&__btn
