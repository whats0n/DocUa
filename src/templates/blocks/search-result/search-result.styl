.search-result
  .livesearch.top-list
    position absolute
    right 0
    left 0
    // top 100%
    z-index: 10001
    background-color: white
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.25)
    width 100% !important

  // .livesearch li:last-child
  //   padding-bottom 7px

  .more-toggle
    position relative
    display block
    border-top 1px dashed rgba(0,130,155,.31)
    background-color #eff0f0
    height 50px
    line-height 50px
    &.more-toggle_mod
        background-color: #00829b
        padding: 0 10px 0 15px
        border-radius: 0 0 0 0
        clearfix()
        line-height: 49px
        .more-toggle__found
          float left
          text-align left
          color: #fff
          font-size: 14px
          padding-left 0
          
          @media only screen and (max-width: 960px)
            font-size 13px
            width auto
        .more-toggle__link
          float right
          font-size 14px
          width auto
          color #FFF
          font-weight 400 
          text-align right
          @media only screen and (max-width: 960px)
            font-size 13px
            width auto
            
          .more_link
            &:after
              content ""
              position absolute
              top 4px
              right 0  
              background: url('i/new-search/arrow-big-search.png') no-repeat
              width 19px
              height 13px
        .more-toggle__hidden
          @media only screen and (max-width: 960px)
            display none
    &__link 
      display inline-block
      vertical-align top
      width 50% 
      background none
      padding 0 
      top 0
      font-size 16px 
      font-weight bold
      color blue_base
      text-decoration underline
      &:hover
        text-decoration none
      .more_link
        position relative
        padding-right 26px 
        &:after
          content ""
          position absolute
          top 4px
          right 0
          sprite($arrow_right_green) 
    &__found
      display inline-block
      vertical-align top
      width 50% 
      padding-left 25px 
      color light_blue_text
      font-size 16px
      text-align left
  .specialty.article-list-item__date 
    margin-left 50px
    @media only screen and (max-width: 768px)
       padding 0
       line-height 1  

.container-menu
  .livesearch.top-list
    right -1px