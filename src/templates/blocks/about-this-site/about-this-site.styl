txtColor = header_icons_color
txtColorSeo = header_icons_color
.row
	&.about-this
		border-top 1px solid #57adbd
		background: #00829b !important
.about-this-site
	color txtColor
	font-size 13px
	padding 20px 0 10px
	@media phone
		display none
	&_seo
		position relative
		overflow hidden
		color txtColorSeo
		font-size 12px
		line-height 20px
		padding 26px 0 30px
		.wrap
			width 100% !important
		p
			margin 0
			color: #7bc6d4
	a
		color txtColor
		text-decoration none
		&:hover
			color txtColor
			text-decoration underline
	b, strong
		font-weight normal
