.doc-widget
    position: relative
    padding: 21px
    border: 1px solid #35bfae
    box-shadow: 0 1px 1px rgba(0, 64, 76, 0.30) 
    width: 100%
    border-radius: 3px
    overflow: hidden
    background: #fff 
    clearfix()
    max-width: 848px
    min-width: 602px
    *
        margin: 0
        padding: 0
    &.doc-widget_normal
        .doc-widget
            &__img
                margin-bottom: 9px
            &__review
                margin-bottom: 18px
            &__schedule
                padding: 9px 12px 8px 
    &.doc-widget_small
        .doc-widget
            &__left
                width: 120px
                text-align: center
                padding: 0
            &__right
                padding-left: 145px
            &__img
                width: 59px
                height: 59px
                border: none
                margin: 0 auto 10px
                img
                    max-width: 100%
                    max-height: 100% 
                    display: inline-block
                    vertical-align: middle
            &__rating
                margin-bottom: 3px
            &__stars, &__value
                vertical-align: bottom
            &__value
                font-size: 18px
            &__stars
                margin-left: 4px
            &__review
                margin: 0
            &__title
                &-link
                    font-size: 18px
            &__tags
                height: auto
                margin-bottom: 15px
            &__address
                &-mod
                    padding: 0
            &__bottom
                clearfix()
                text-align: left
            &__button
                font-size: 17px
                border-radius: 4px
                padding: 10px 22px 11px
        .doc-schedule
            font-size: 0
            padding: 3px 0 0 24px
            position: relative
            float: left
            &:before
                content: "" 
                position: absolute
                top: 2px
                left: 0
                sprite($calendar)
            &__box
                padding-right: 25px
                display: inline-block
                vertical-align: top
                font-size: 13px
                line-height: 18px
                padding-bottom: 10px
                &-day, &-time
                    display: inline-block
                    vertical-align: top
                &-day
                    color: #96b8bf
                &-time
                    color: #5e6e71
    .doc-widget
        &__logo
            position: absolute
            top: 0
            right: 0
            background: green_base
            padding: 13px 7px 10px 1px
            font-size: 0
            img
                display: block
            &:before
                content: ""
                position: absolute
                top: 0
                right 100%
                width: 0px
                height: 0px
                border-style: solid
                border-width: 0px 38px 48px 0px
                border-color: transparent green_base transparent transparent
                
        &__left
            width: 162px
            padding: 0 23px 0 0 
            float: left
        &__right
            padding: 0 0 0 162px 
        &__img
            width: 139px
            height: 108px
            background-color: white
            border: 1px solid #c0d2d6
            border-radius: 3px
            display: block
            margin-bottom: 20px
            text-align: center
            font-size: 0
            &:before
                content: ""
                display: inline-block
                vertical-align: middle
                width: 0
                height: 100%
            img
                display: inline-block
                vertical-align: middle
                max-width: 100%
                max-height: 100% 
        &__rating
            text-align: center
            font-size: 0
        &__value, &__stars
            display: inline-block
            vertical-align: middle
        &__value
            color: #00829b
            font-size: 24px
            font-weight: 700
            line-height: 1
        &__stars
            width: 84px
            height: 19px
            margin-left: 8px
            &-active
                div 
                    sprite($stars-active)
                    width 84px
                    height 19px
                    
        &__review
            text-align: center
            font-size: 0
            margin-bottom: 25px
            &-link, &-icon
                display: inline-block
                vertical-align: middle
            &-link
                color: #4b89d3
                font-size: 16px
                line-height: 1
                text-decoration: none
                &:hover
                    text-decoration: underline
            &-icon
                width: 15px
                height: 15px
                border: 1px solid #91b5bc
                color: #91b5bc
                font-family: Georgia
                font-size: 10px
                font-weight: 700
                font-style: italic
                line-height: 13px
                text-align: center
                border-radius: 50%
                padding-right: 1px
                margin: 2px 0 0 7px
        &__schedule
            position: relative
            background-color: white
            border: 1px dashed #c0d2d6
            border-radius: 3px
            padding: 13px 12px 10px
            clearfix()
            font-size: 13px
            line-height: 18px
            &-item
                clearfix()
            &-icon
                sprite($calendar)
                background-color: #fff
                margin: 0 0 0 -13px
                position: absolute
                top: -13px
                left: 50%
            &-day
                color: #96b8bf
                width: 46px
                float: left
            &-time
                color: #5e6e71
                overflow: hidden
        &__title
            padding: 0 128px 11px 0 
            margin-top: -3px
            &-link
                color: #4b89d3
                font-size: 24px
                font-weight: 700
                line-height: 1
                display: inline-block
                vertical-align: top
                text-decoration: none
                &:hover
                    text-decoration: underline
        &__tags
            color: #5e6e71
            font-size: 14px
            line-height: 1.2
            padding: 0 60px 0 0 
            height: 48px 
            overflow: hidden
            margin-bottom: 18px  
        &__info
            font-size: 0
            padding: 0 0 5px 
            &-box
                width: 98px
                padding: 0 0 0 36px
                position: relative
                display: inline-block
                vertical-align: top
                min-height: 30px
                margin-bottom: 10px
            &-icon
                position: absolute
                top: 0
                left: 0
                &-years
                    sprite($benefit-icon-1)
                    width 30px
                    height 30px
                &-ppls
                    sprite($benefit-icon-11)
                    width 30px
                    height 30px
                &-home
                    sprite($benefit-icon-4)
                    width 30px
                    height 30px
                &-wifi
                    sprite($benefit-icon-9)
                    width 30px
                    height 30px 
            &-text
                color: #5e6e71
                font-size: 12px
                line-height: 1
                padding: 3px 0 
        &__address
            font-size: 0
            padding: 7px 0 
            &-dashed
                border-top: 1px dashed #c0d2d6
                border-bottom: 1px dashed #c0d2d6
                margin-bottom: 12px
            &-box
                display: inline-block
                vertical-align: top
                padding: 5px 40px 5px 20px
                position: relative
                &-place
                    padding-left: 20px
                &-metro
                    padding-left: 25px
                &-marker
                    padding-left: 23px
            &-icon
                position: absolute
                top: 50%
                left: 0
                &-place
                    sprite($location)
                    margin-top: -11px
                &-metro
                    margin-top: -6px
                    &-blue
                        sprite($metro_blue)
                    &-green
                        sprite($metro_green)
                    &-red
                        sprite($metro_red)
                &-marker
                    sprite($district)
                    margin-top: -8px
            &-text
                color: #5e6e71
                font-size: 12px
                line-height: 1
                &-dotted
                    div
                        border-bottom: 1px dotted #5e6e71 
        &__text
            color: #5e6e71
            font-size: 14px
            line-height: 20px
            margin-bottom: 8px
            height: 80px
            overflow: hidden
        &__bottom
            text-align: right
            font-size: 0
            padding: 8px 0 0 
        &__button
            text-shadow: 0.5px 0.9px 0 rgba(48, 49, 49, 0.23)
            color: white
            font-size: 18px
            font-weight: 700
            line-height: 1
            background: green_base
            border-radius: 3px
            padding: 13px 22px 14px 25px 
            display: inline-block
            vertical-align: top
            cursor: pointer
            outline: none
            transition: background 0.2s
            text-align: center
            text-decoration: none
            &:hover
                background: darken(green_base, 10%) 
            &:active
                background: darken(green_base, 20%) 

