            text-shadow: 0.5px 0.9px 0 rgba(48, 49, 49, 0.23)
            color: white
            font-size: 15px
            font-weight: 700
            line-height: 1
            background: green_base
            border-radius: 3px
            padding: 13px 20px 13px 20px
            display: inline-block
            vertical-align: top
            cursor: pointer
            outline: none
            transition: background 0.2s
            text-align: center
            text-decoration: none
            width: 100%
            &:hover
                background: darken(green_base, 10%) 
            &:active
                background: darken(green_base, 20%) 
        &__comment
            border-top: 1px dashed #c0d2d6
            clearfix()
            padding: 13px 18px 18px
            &-name
                color: #96b8bf
                font-size: 14px
                font-weight: 700
                line-height: 1
                float: left
                margin-bottom: 8px
            &-date
                color: #96b8bf
                font-size: 13px
                line-height: 1
                float: right
                margin-bottom: 8px
            &-text
                clear: both
                color: #5e6e71
                font-size: 14px
                line-height: 1.2
                margin-bottom: 11px
        &__likebox
            position: relative
            padding: 0 0 0 21px 
            &-like
                .doc-compact__likebox
                    &-icon
                        top: -2px
                        sprite($doc-like)
                        width 14px
                        height 16px
                    &-text
                        color: green_base
            &-dislike
                .doc-compact__likebox
                    &-icon
                        top: 3px
                        sprite($doc-dislike)
                        width 14px
                        height 16px
                    &-text
                        color: #ff5858
            &-icon
                position: absolute
                left: 0
            &-text
                font-size: 14px
                line-height: 1.2

