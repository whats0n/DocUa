.post2
    position relative
    height 220px
    margin-bottom 25px
    background transparent
    &__body
        position absolute
        top 0
        bottom 0
        left 0
        right 0  
        border-radius 2px
        overflow hidden 
        padding 0 $post_hor_padding
        &:before
            content "" 
            position absolute
            top 0
            bottom 0
            left 0
            right 0  
            background-image linear-gradient(to top,rgba(190, 198, 200, 0.62) 0, rgba(3,33,39,.53) 0, rgba(5,44,51,.23) 36%, rgba(7,51,60,.28) 61%, rgba(9,62,72,.53) 96%, rgba(9,63,73,.53) 100%)
            background-repeat no-repeat
            background-size 100% 100%
            transition all .2s ease-in-out
        &:hover
            &:before
                background-color rgba(1, 59, 70, 0.67)
                opacity .75
            .post2__title
                text-decoration underline 
                opacity 1 
            .sticker-bg
                opacity 1 
        @media screen560
            height auto
    &__thumb
        position absolute
        // max-width 273px 
        // max-height 220px 
        width 100% 
        height 100%
        background-color #fff
        border-radius 2px
        background-size cover
        background-repeat no-repeat
        background-position 50% 50%
    &__title
        position absolute
        bottom 60px
        left 18px  
        right 15px 
        font-size 18px
        font-weight bold
        color #FFF 
        line-height 1.3
        text-decoration none
        @media only screen and (max-width:1024px)
            bottom 65px
        @media only screen and (max-width:768px)
            top 35px
        @media phone
            top auto
    &__sticker 
        position absolute
        top 0
        left 0  
        padding 6px 3px 6px 10px 
        .sticker-bg
            position absolute
            top 0
            left 0 
            right 0
            bottom 0
            background green_base
            opacity .75 
            z-index 2 
            transition all .2s ease-in-out
            &:after
                content "" 
                position absolute
                top -40px
                right -26px
                width 33px
                height 70px
                background green_base
                transform rotate(40deg)
                z-index 2
        span
            position relative
            font-size 18px
            font-weight bold
            line-height 1 
            color #FFF 
            opacity 1
            z-index 5

    &__price
        position absolute
        bottom 20px
        left 18px
        right 0
        height 25px 
        @media only screen and (max-width: 1024px)
            // left 0
            width 100%
            &-old + &-value
                float right
            &-old
                float left
                line-height 1.3        
        @media only screen and (max-width:768px)
            bottom 30px
            // left 0
            // text-align center 
        @media phone
            text-align left
            left 18px
        &-value
            display inline-block
            margin 0
            margin-right 20px 
            font-weight 700
            font-size 29px
            line-height 1 
            color #FFF 
            @media only screen and (max-width:1024px)
                left 18px
                font-size 25px
            // @media only screen and (max-width:768px)
            //     display block
            //     margin-right 0 
            //     font-size 24px
            //     left 0
            //     right 0
            @media phone
                display inline-block
                font-size 29px
                margin-right 20px 
        &-old + &-value
            margin-top 0
            display inline
        &-old
            // text-align center 
            display inline-block
            color #fff
            font-size 20px
            line-height 1
            text-decoration line-through
            @media only screen and (max-width:1024px)
                // font-size 18px
                line-height 1.5
                float none 
            // @media only screen and (max-width:768px)
            //     display block    
            @media phone
                display inline-block    
                font-size 20px        
