.contacts
    font-size 14px
    line-height 1.4
    color #fff
    a
        color #fff
    p
        margin 0
        line-height: 27px
    &__title
        margin 0 0 18px
        font-size 16px
        line-height 1.25
        font-weight bold
        color #fff
        text-transform uppercase
        letter-spacing 1pt
        @media phone
            position relative
            display inline-block
            margin-bottom 0
            padding-right 15px
            &:after
                content ''
                position absolute
                right 0
                top 9px
                border-width 4px
                border-style solid
                border-color #fff transparent transparent
    &__copyright
        a
            text-decoration none
    &__rights
        font-size 12px
        line-height 1.166
        &_international
            display none
    &__phone
        margin-bottom: 10px
        &-number
            margin 0
        span
            display inline-block
            width 46%
            margin-right 2%
            @media tablet
                width 100%
        @media phone
            display none
    &__callback
        display inline-block
        width 46%
        margin-right 2%

        @media only screen and (max-width: 1100px)
            width 100%
            