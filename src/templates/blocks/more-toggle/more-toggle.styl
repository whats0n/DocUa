.more-toggle
    display none
    // position absolute
    // bottom 0
    // left 0
    height 5px
    width 100%
    background-color #fff
    border-radius 0 0 border_radius_sm border_radius_sm
    text-align center
    transition border-color 0.2s ease, box-shadow 0.2s ease
    cursor pointer
    
    &__link
        position relative
        top 7px
        display inline-block
        // padding 0 30px 0 20px
        // background-color #fff
        // border-radius 0 0 border_radius_sm border_radius_sm
        text-decoration none
        // transition: border-color .2s ease,box-shadow .2s ease
        .more-toggle_with-icon &
            padding-right 15px
        &:hover
            .more-toggle__hide-label>span, 
            .more-toggle__show-label>span
                border-bottom: none
        @media phone
            width 100% 
    &__show-label 
    &__hide-label
        position relative
        // top 8px
        > span
            position relative
            display inline-block
            vertical-align middle
            // border-bottom 1px dotted
            color: white
            font-family: "PT Sans"
            font-size: 14px
            font-weight: 400
            line-height 14px
            &:after
                content ""
                display inline-block
                vertical-align middle
                margin-left 10px
                sprite($more-toggle)
    &__show-label
        position relative
        display inline-block
        .show-hidden-small-cards &
            display none
        .more-toggle_with-icon &
            padding-right 27px
        
        &:after
            content ''
            position absolute
    &__hide-label
        display none
        > span
            &:after
                transform rotate(180deg)
        .show-hidden-small-cards &
            display inline-block

