// styles for buttons on index page with double and single strokes
.more-toggle
    &.double-stroke-btn, &.single-stroke-btn
        display block
        font-size 14px
        bottom -18px
        .link-wrap
            position relative
            display inline-block
            transition all .2s ease-in-out
            &:hover:before
                border-color green_base
            &:hover
                .more-toggle__link
                    color green_base
                    border-color green_base
            &:before
                content "" 
                position absolute
                top 4px
                right -4px
                width 100% 
                height 100% 
                border 1px dashed blue_base
                z-index 1
            @media phone
                width 92% 
        .more-toggle__link
            position relative
            top 0 
            margin-top 0
            padding-top 0
            padding 10px 25px
            color: blue_base
            border 1px dashed blue_base
            outline none
            z-index 1
            background-color #fff
            transition all .2s ease-in-out
            // &:hover
            //  color green_base
            //  border-color green_base 
        .more-toggle__show-label
            padding 0
            top 0
            &:after
                content none
            >span
                border 0
                font-size 17px 
                font-weight bold
                
.single-stroke-btn
    &.more-toggle
        .link-wrap
            &:before
                content none

// color fill for toggle btns
.white-toggle
    &.more-toggle
        background none
        .more-toggle__link
            background #fff
.texture-toggle
    &.more-toggle
        background none
        .more-toggle__link
            background grey_texture
            


