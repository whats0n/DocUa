.more-toggle
    display none
    cursor pointer
    position absolute
    bottom 0
    left 0
    height 5px
    width 100%
    background-color #fff
    border-radius 0 0 border_radius_sm border_radius_sm
    text-align center
    transition border-color 0.2s ease, box-shadow 0.2s ease
    &__link
        position relative
        top 5px
        display inline-block
        padding 0 30px 0 20px
        background-color #fff
        border-radius 0 0 border_radius_sm border_radius_sm
        text-decoration none
        transition: border-color .2s ease,box-shadow .2s ease
        .more-toggle_with-icon &
            padding-right 15px
        &:hover
            .more-toggle__hide-label>span, 
            .more-toggle__show-label>span
                border-bottom: none
    &__show-label 
    &__hide-label
        position relative
        top -8px
        > span
            display inline-block
            border-bottom 1px dotted
            line-height 14px
    &__show-label
        position relative
        display inline-block
        .show-hidden-small-cards &
            display none
        .more-toggle_with-icon &
            padding-right 27px
        
        &:after
            content ''
            position absolute
    &__hide-label
        display none
        .show-hidden-small-cards &
            display inline-block

.more-toogle-parent
    position relative
    padding-bottom 70px  
    .more-toggle
        bottom 20px
        position relative
        display inline-block
        margin-top 20px
        font-size 14px
        left 0
        right 0
        height 50px
        background 0 0
        @media phone
            bottom 0 

.has-hidden-small-cards
    margin-bottom 32px !important
    .more-toggle
        display block

.chooser
    .more-toggle
        &__show-label:after
            top 6px
            right 0
            sprite($square)
.card
    .more-toggle
        &__show-label, &__hide-label
            &:after
                display: none
            span
                border: none
                text-decoration: underline
        &__link
            border 1px solid #f5f6f9;
            border-top 0
            box-shadow 0 2px 3px #e3e4ed
            padding: 0 20px
            color: #4b89d3 
            position: relative
            &:hover
                .more-toggle
                    &__show-label, &__hide-label
                        span
                            text-decoration: none
            &:before
                content: ''
                position: absolute
                top: -5px
                left: 0
                right: 0
                bottom: 0
                background: #fff
                
.chooser, .more-toogle-parent, .blog-block
    .more-toggle
        display block
        font-size 14px
        bottom -18px
        .link-wrap
            position relative
            display inline-block
            transition all .2s ease-in-out
            &:hover:before
                border-color green_base
            &:hover
                .more-toggle__link
                    color green_base
                    border-color green_base
            &:before
                content "" 
                position absolute
                top 4px
                right -4px
                width 100% 
                height 100% 
                border 1px dashed blue_base
                z-index 1
        &__link
            position relative
            top 0 
            margin-top 0
            padding-top 0
            padding 10px 25px
            color: blue_base
            border 1px dashed blue_base
            outline none
            z-index 1
            background-color #fff
            transition all .2s ease-in-out
            // &:hover
            //  color green_base
            //  border-color green_base 
        .more-toggle__show-label
            padding 0
            top 0
            &:after
                content none
            >span
                border 0
                font-size 17px 
                font-weight bold
