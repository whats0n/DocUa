.short-list
    background #fff
    border-radius 3px
    border 1px solid border_grey
    box-shadow 0 2px 3px #e3e4ed
    .first-child
        border-color transparent

    h3
      margin-top 13px
      margin-bottom 4px
      font-size 18px
      text-align center
    &__footer
        padding 6px 0 10px
        text-align center
        border-radius 0 0 3px 3px
        border-top 1px dashed text_blue
    &__items
        margin 0
        list-style none
        &-wrapper
            overflow auto
    &__item
        margin-bottom 5px
        padding 15px 21px 8px
        border-top 1px dashed text_blue
        overflow hidden
        &:last-child
            margin-bottom 0
            border-bottom 0 none
        &-content
            overflow hidden
    &__image
        float left
        width 72px
        margin 5px 14px 0 0
        overflow hidden
        img
            width 100%
    &__title
        display block
        line-height 1.3
        font-weight bold
        color: #4b89d3
        font-size: 16px
    &__label
        margin-top 3px
        line-height 1.2
    &__more-link
        font-size 15px

    .rating
        margin-top 10px
        &__stars
            // float right
            margin-top 4px
        &__value
            // float right
            margin 0 5px 0 0
    
    &__item-content
        @media only screen and (min-width: 992px)
            position relative
            padding-bottom 26px
            .rating
                width 120px
                position absolute
                left: 0
                bottom: 0

.widget
    &.widget-doctor
        .short-list
            &__image
                height 92px
                overflow: hidden
                font-size: 0
    &.widget-clinic
        .short-list
            &__image
                height 75px 

