.promotional-offers
	display block
	width 100%
	&.promotional-offers_action
		.offers 
			&__item
				// .offers-wrap
				// 	padding 12px 21px
				.heading
					&__left
						// width 45%
						@media only screen and (max-width: 1200px)
							// width 40%
							min-height 57px
						@media screen560
							width 100%
							min-height auto
						
	&__title
		background-color: #e5f2f5
		line-height 51px
		padding 0 20px 0 39px 
		font-size 15px
	.offers
		position relative
		&__item
			background #FFF
			border-bottom 1px solid #e6edef
			// &:first-child
			// 	border-top 1px solid transparent
			&:last-child
				// border-color transparent 
				border-radius 0 0 3px 3px
				&:hover
					border-color #e5f2f5
					
			&.is-active
				background-color: #f3f8fb
				outline 1px solid green_base
			.offers-wrap
				padding 15px 21px 15px 39px
				// &:hover .offers__item
				// 	border-top-color: #fff
				@media screen560
					padding 15px 21px
				&:hover
					background-color: #f3f8fb
					cursor pointer
				&:hover .percent 
					display none !important
				&:hover .price-discount
					display none !important
				&:hover .btn-hidden
					display inline-block !important
					@media only screen and (max-width: 760px)
						display block !important
			.heading
				clearfix()
				&__left
					float left
					width 40%
					min-height 27px 
					@media only screen and (max-width: 1200px)
						width 35%
					@media only screen and (max-width: 620px)
						width 40%
					@media only screen and (max-width: 760px)
						min-height 55px
					@media screen560
						float none
						width auto
						min-height 27px
					.names
						font-size 15px
						color text_color
						margin-bottom -6px
						span 
							color: #90b1b8
					
				&__right
					float right
					text-align left
					@media screen560
						float none
						min-height: 62px
					.fillials
						position relative
						display inline-block
						padding-left 19px
						color: text_color
						margin-right 10px
						&:before
							content ""
							position absolute
							left 0
							top 3px
							sprite($location)
						@media only screen and (max-width: 1100px)
							margin-right 5px
					.percent 
						display inline-block
						font-size: 15px
						color text_color
						margin-right 5px 
						width 45px
						@media only screen and (max-width: 1100px)
							margin-right 5px
						@media screen560
							display none !important
					.price-discount
						display inline-block
						width 133px
						text-align right
						.old-price
							display inline-block
							color: #91b5bc
							font-size: 13px
							text-decoration: line-through
						.new-price
							display inline-block
							color: #5e6e71
							font-size: 16px
							@media only screen and (max-width: 1100px)
								font-size 15px
					.btn
						display inline-block
						vertical-align middle
						font-weight 700
						font-size 16px 
						padding 3px 7px 
						margin -3px 0 0 15px
						@media only screen and (max-width: 760px)
							margin-top 5px
						@media screen560
							margin 10px 0 0 0  
						&.btn-hidden
							display none
						@media only screen and (max-width: 1100px)
							margin -3px 0 0 5px
							font-size 15px
						@media screen560
							display block !important
.btn-group
	&__icon
		position relative
		display inline-block
		vertical-align middle
		margin-top 2px
		width 9px
		height 7px
		height 1px
		background-color #4b89d3 
		&:before, &:after
			content ""
			position absolute
			width 100%
			height 1px
			background-color #4b89d3 
		&:before
			top 3px
		&:after
			bottom 3px
	a
		margin-left 7px
		color: #4b89d3
		font-size: 13px
		vertical-align middle
						
.hide-content
	display none
	background #FFF 
	-webkit-border-radius 0 0 3px 3px  
	border-radius 0 0 3px 3px  
	padding 28px 21px 19px 39px 
	.analysis-list
		columns 2 
		column-gap: 60px
		@media screen560
			columns 1
		clearfix()
		&__item
			// float left
			// display inline-block
			// vertical-align top
			width 100%
			display: inline-table
			margin-bottom 12px
			padding-right 20px
			span 
				color: #73868a
	&.hide-content_modifie
		border-top 2px solid #35bfae
		border-bottom 2px solid #35bfae
							
.offers-color
	padding: 25px 30px
	border-radius: 4px
	margin: 10px 0	
	background-color: #fff9e9
	span
		position relative
		color: #5e6e71
		font-size: 14px
		padding-left 25px
		&:before
			content ""	
			position absolute
			left 0
			top -2px
			background-image url("i/i-color.png") 
			width 21px
			height 21px			
				