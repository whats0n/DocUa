.header-styled
	&.notopmargin
		margin-top 0
	.h1 
		margin-bottom 10px 
.page-error
	background #fff
	margin-bottom 35px
	box-shadow 0 2px 4px rgba(0,64,76,.15)
	border-radius 3px
	&__inner
		max-width 700px 
		width 100% 
		margin 0 auto 
		padding 100px 0
		text-align center
		@media tablet
			padding 60px 30px 70px
		@media phone
			padding 10px 20px 50px
	&__number
		p
			margin 0 auto
			margin-top -45px  
			padding 0
			color #aac4ca
			font-family Roboto
			font-size 20em
			font-weight 100
			line-height 1
			text-transform uppercase
			@media tablet
				margin-top -35px
				font-size 15em 
			@media phone
				margin 0 
				font-size 10em 
	&__content
		margin-bottom 25px 
	&__text
		font-size 18px
		line-height 23px
		opacity .9 
		@media tablet
			font-size 16px
		@media phone
			font-size 15px
		
	&__btn
		padding 2% 6%
		font-size 18px
		font-weight 700
		border-radius 3px
		text-decoration none
		cursor pointer
		@media phone
			font-size 15px
		&:hover
			background #32b3a3
			color #fff 
	&__picture
		max-width 161px 
		width 100% 
		height 100% 