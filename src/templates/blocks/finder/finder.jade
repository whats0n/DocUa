case data.page
    when "doctors"
        +e.search-title Поиск врачей
    when "map"
        +e.search-title Поиск врачей
    when "clinics"
        +e.search-title Поиск клиник
    when "actions"
        +e.search-title Поиск акции
    when "bundles"
        +e.search-title Поиск пакетов
form(action="/")
    fieldset
        case data.page
            when "doctors"
                +e.field.finder__field-icon-doctors
                    +e("input").field-text(type="text" placeholder="Выберите специальность врача" class="form-control")
                    span(data-target="#select-specialization", data-toggle="modal")
                    +b.search-result.hidden: +i
                +e.field.finder__field-icon-location
                    +e("input").field-text(type="text" placeholder="Выберите район или метро" class="form-control")
                    span(data-target="#select-area", data-toggle="modal")
                    +b.search-result.hidden: +i
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти врача
            when "map"
                +e.field.finder__field-icon-doctors
                    +e("input").field-text(type="text" placeholder="Выберите специальность врача" class="form-control")
                    span(data-target="#select-specialization", data-toggle="modal")
                +e.submit
                    a.btn.btn-success.form-control(href="/clinics.html") Вернуться к списку
            when "countries"
                +e.field.finder__field-icon-doctors(data-target="#select-specialization", data-toggle="modal")
                    +e("span").field-text специальность
                +e.field.finder__field-icon-location(data-target="#select-countries", data-toggle="modal")
                    +e("span").field-text выберите страну
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти врача
            when "clinics"
                +e.field.finder__field-icon-clinics
                    +e("input").field-text(type="text" placeholder="Выберите направление" class="form-control")
                    span(data-target="#select-branch", data-toggle="modal")
                +e.field.finder__field-icon-location
                    +e("input").field-text(type="text" placeholder="Выберите район или метро" class="form-control")
                    span(data-target="#select-area", data-toggle="modal")
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти клинику
            when "diagnostics"
                +e.field.finder__field-icon-clinics(data-target="#select-area-diagnostics", data-toggle="modal")
                    +e("span").field-text выберите диагностику
                +e.field.finder__field-icon-location(data-target="#select-area", data-toggle="modal")
                    +e("span").field-text район
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти клинику
            when "analyzes"
                h1 analyzes
            when "bundles"

                +e.field.finder__field-icon-aim
                    +e("input").field-text(type="text" placeholder="Выберите тип пакета" class="form-control")
                    span(data-target="#select-bundles", data-toggle="modal")
                +e.field.finder__field-icon-location
                    +e("input").field-text(type="text" placeholder="Выберите район или метро" class="form-control")
                    span(data-target="#select-area", data-toggle="modal")
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти услугу
            when "actions"
                +e.field.finder__field-icon-aim
                    +e("input").field-text(type="text" placeholder="Выберите тему акции" class="form-control")
                    span(data-target="#select-actions", data-toggle="modal")
                +e.field.finder__field-icon-location
                    +e("input").field-text(type="text" placeholder="Выберите район или метро" class="form-control")
                    span(data-target="#select-area", data-toggle="modal")
                +e.submit
                    button.btn.btn-warning.form-control(type="submit") Найти акцию