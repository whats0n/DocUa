                padding: 16px 0 0  
                width: 100%
            .finder__btn-map
                background-color: green_base
                border-radius: 3px
                width: 114px
                height: 39px
                // height 50px
                font-size: 16px
                border: none
                line-height: 39px
                text-shadow: none
                // padding 5px
                // padding: 5px 18px 5px 14px 
                position: relative 
                @media screen560
                    width: 100%
                &:hover
                    background: darken(green_base, 10%) 
                &:active, focus
                    background: darken(green_base, 20%) 
                &:before
                    content: "" 
                    // position: absolute
                    // top: 13px
                    // left: 14px
                    margin: 13px 10px 0 0
                    display: inline-block
                    vertical-align: top 
                    width: 13px
                    height: 13px
                    background: url("i/icons/circle-left.png") no-repeat center center 
                    

