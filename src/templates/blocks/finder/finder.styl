$finder_input_padding = 8px
.finder
    margin-top 20px
    margin-bottom 45px 
    padding 0 10px 
    position relative
    z-index 2
    white-space nowrap
    clearfix()
    &.finder_main-page
        max-width 1060px 
        width 100% 
        margin 20px auto 45px
        padding 0 
    &.search-title_none
        .finder__search-title
            display none
    
    &__search-title
        position relative
        float left
        width 12%
        height 78px
        padding 25px 0
        color #fff
        font-weight: 700
        letter-spacing: 0.05em  
        font-size 14px
        line-height 28px
        text-transform uppercase 
        text-align center
        background-color green_base
        border-radius border_radius_sm 0 0 border_radius_sm
        
        @media phone_tablet
            display none
        
        &:after
            content ""
            position absolute
            right -19px
            top 0
            width 0
            height 0
            border-style solid
            border-width 39px 0 39px 20px
            border-color transparent transparent transparent green_base
    
    form
        position relative
        float left
        width 100%
        padding 20px 
        @media phone_tablet
            width 100%
        &:before
            content ""
            position absolute
            top 0
            left 0
            bottom 0
            right 0  
            width 100% 
            background-color rgba(255, 255, 255, 0.18)
            opacity 0.29
            border 1px dashed white
            border-radius 2px

        fieldset
            position relative
    &__field
        position relative
        float left
        display inline-block
        margin-right 2px
        width 42%
        height 50px
        
        font-size 16px
        line-height 38px
        box-shadow 0 0 20px transparent
        transition box-shadow .2s ease-in-out
        background-color #fff
        white-space nowrap
        cursor pointer
        &:first-child
            border-radius 2px 0 0 2px
        input.form-control
            width 100%
            height 50px 
            // padding-left 0
            font-size 16px
            border 0
            box-shadow none
            padding 0 45px 0 18px
            @media phone 
                font-size 14px

        @media tablet
            width 39%
        @media phone
            width auto
            float: none
            display: block
            margin: 0 0 20px
        &:before
            content ""
            position absolute
            transition opacity .2s ease-in-out
            background-repeat no-repeat
            width 35px
        &:before
            height 27px
            right $finder_input_padding
            top 6px
        &:hover
            box-shadow 0 0 20px rgba(53, 191, 174, 1)
            .finder__field_img
                opacity .75
        &_img
            display inline-block
            position absolute
            top 50%
            right 50% 
            transition opacity .2s ease-in-out
            background-repeat no-repeat
        &-icon
            &-doctors
                >span
                    right $finder_input_padding + 4
                    top 11px
                    sprite($finder_doctor)
            &-location
                >span
                    right $finder_input_padding + 4
                    top 11px
                    sprite($finder_location)
            &-clinics
                >span
                    right $finder_input_padding
                    top 12px
                    sprite($finder_clinic)
            &-aim
                >span
                    right 4px
                    top 8px
                    sprite($finder_aim)
            &-cla
                >span
                    right 12px
                    top 12px
                    background url('i/cla/cla-finder.png')
                    width 20px
                    height 26px 
                
        &-text
            display inline-block
            color form_input_color
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            width 260px
            @media phone_tablet
                width 100%
        .select7
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            margin 0
            &__current
                padding 2px 45px 0 18px
                &-value
                    border 0 none
            &__caret
                display none
            &__placeholder
                color #d5d5d5
            &__drop
                border 0 none
                padding 5px 0 0 0
                margin -5px 0 0 0
                border-radius 0 0 border_radius_sm border_radius_sm
                overflow hidden
            &__option
                font-size 18px
                line-height 38px
                padding 0 18px
                &:hover
                    background-color #d7f2ef
        .ui-autocomplete
            position: absolute
            z-index 3
            // width 410px
            width calc(100% - 1px)
            // height 100px 
            background-color: white
            border: 1px solid #d9ecf0
            border-radius: 2px
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.02)
            white-space: normal
            line-height normal 
            // padding 17px 0
           
            .ui-menu-item
                position relative
                margin -1px 18px 0 18px 
                border-bottom 1px solid #d9ecf0
                padding 0
                &:before
                    content ''
                    position absolute
                    z-index 2 
                    left -18px
                    top 0
                    width 18px
                    height 100%
                    background-color transparent 
                &:last-child
                    border-bottom 1px solid transparent
                &:hover
                    margin-top -1px
                    background-color: #eef9fb
                    border-bottom 1px solid #eef9fb
                    &:before
                        background-color #eef9fb
                &.js-text-hidden
                    max-height 69px 
                &.no-scroll
                    &:after
                        content ''
                        position absolute
                        z-index 2 
                        right -18px
                        top 0
                        width 18px
                        height 100%
                        background-color transparent 
                    &:hover
                        &:after
                            background-color: #eef9fb 
                a
                    display inline-block
                    padding 15px 0px 15px 0px 
                    color: #7c888a
                    text-decoration none
                    font-size 15px
                span.is-active
                    color: #00829b
                    font-weight: 700
    &__submit
        display inline-block
        width 15.8%
        @media tablet
            width 21.5%
        @media phone
            float left
            width 100%
        .btn
            height 50px
            font-size 20px
            padding 0
            font-weight: 700
            text-shadow: 0 1px 1px rgba(180, 137, 63, 0.75)
            background-color #fd8f2e            
            outline: none !important
            box-shadow: none 
            border-radius 0 2px 2px 0
            border-color #fd8f2e 
            @media phone
                font-size 20px
            @media only screen and (min-width: 992px) and (max-width: 1100px)
                font-size 19px 
            &:hover
                background-color: #fda82e
            &:active, &:focus
                background-color: #fda82e
    .nav-pills
        margin 0
        >li
            margin -6px 0 0 5px
            &:first-child
                margin-left 0
            >a
                background-color transparent
                color #0089d1
                border-radius border_radius_sm
                border 0 none
                padding 0 10px
                font-size 16px
                line-height 30px
                &:hover
                    background none
                span
                    border-bottom 1px dotted
            &.active
                >a
                    color #fff
                    background #52aab3
                    border 0 none !important
                    span
                        border-bottom-color transparent
    &.hidden-sm
        display inline-block !important

    .livesearch
        width 100% !important
        
    

