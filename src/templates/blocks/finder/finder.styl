                    top: 8px
                    height: 25px
                    right: 0
            input.form-control
                @media screen560
                    height: 38px
                    display: block
                    font-size: 14px
                    padding-right: 0
            &-icon-doctors
                > span
                    top: 11px
                    right: 9px
                    width: 18px
                    height: 21px
                    background: url("i/icons/finder-doc.png") no-repeat center center 
            &-icon-clinics
                > span
                    right 3px
                    top 7px
        &__submit
            width: 114px
            position: absolute
            top: 19px
            left: 21px
